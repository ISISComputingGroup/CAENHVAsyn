CAEN_ARCH = $(EPICS_HOST_ARCH)

ifneq ($(findstring win32-x86,$(EPICS_HOST_ARCH)),)
CAEN_ARCH = win32
endif

ifneq ($(findstring windows-x64,$(EPICS_HOST_ARCH)),)
CAEN_ARCH = win64
endif

CAENHVWRAPPER=$(TOP)/CAENHVWrapper
CAENHVWRAPPER_LIB=$(CAENHVWRAPPER)/lib/$(CAEN_ARCH)
CAENHVWRAPPER_INCLUDE=$(CAENHVWRAPPER)/include
CAENHVWRAPPER_DLL=$(CAENHVWRAPPER)/dll/$(CAEN_ARCH)
